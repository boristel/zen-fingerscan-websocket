# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=bc_zen
DB_SSL=false
DB_POOL_MAX=20
DB_POOL_MIN=5

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=24h
SESSION_SECRET=your-session-secret-change-in-production-min-32-chars
ENCRYPTION_KEY_DEV=your-32-character-encryption-key-for-dev-environment
ENCRYPTION_KEY_PROD=your-32-character-encryption-key-for-production-environment

# CORS Configuration
CORS_ORIGIN=http://localhost:8080,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BIOMETRIC_RATE_LIMIT_MAX=20
AUTH_RATE_LIMIT_MAX=10

# File Upload Configuration
MAX_FILE_SIZE=10485760
MAX_TEMPLATE_SIZE=1048576

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=100m
LOG_FILE_MAX_DAYS=30
AUDIT_LOG_MAX_DAYS=365

# Biometric Configuration
BIOMETRIC_VERIFICATION_THRESHOLD=80
BIOMETRIC_MAX_ATTEMPTS=3
BIOMETRIC_LOCKOUT_DURATION=300
TEMPLATE_DATA_RETENTION_DAYS=730

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@company.com

# Application Configuration
APP_VERSION=1.0.0
APP_NAME=Biometric Attendance System
COMPANY_NAME=Your Company

# Monitoring and Analytics
ENABLE_MONITORING=true
SENTRY_DSN=your-sentry-dsn-for-error-tracking
ANALYTICS_ID=your-google-analytics-id

# Development Only
ENABLE_SWAGGER=true
ENABLE_CORS_DEBUG=true
ENABLE_QUERY_LOG=true